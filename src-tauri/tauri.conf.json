{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Keeyper",
  "version": "1.0.0",
  "identifier": "com.keeyper.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Keeyper",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Developer Tool",
    "shortDescription": "API Key 管理工具",
    "longDescription": "跨平台大模型 API Key 管理工具，支持密钥过期追踪、快捷复制等功能。",
    "publisher": "Keeyper",
    "copyright": "Copyright © 2025 Keeyper"
  },
  "plugins": {}
}
